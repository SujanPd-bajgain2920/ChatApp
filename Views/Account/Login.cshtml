@model UserListEdit
@{
    Layout = "_StaticLayout";
}
<body class="bg-gray-100">

    <div class="container mx-auto mt-20">
        <div class="flex justify-center">
            <div class="w-full max-w-md">
                <div class="bg-white p-8 rounded-lg shadow-md">
                    <h2 class="text-3xl font-bold text-center text-blue-700 mb-4">User Login</h2>

                    <!-- Form for Login -->
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="EmailAddress" class="block text-gray-700 text-sm font-bold mb-2">
                                Email <span class="text-red-500">*</span>
                            </label>
                            <input asp-for="EmailAddress"
                                   class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"
                                   required />
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label asp-for="UserPassword" class="block text-gray-700 text-sm font-bold mb-2">
                                Password <span class="text-red-500">*</span>
                            </label>
                            <input asp-for="UserPassword" type="password"
                                   class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"
                                   required />
                        </div>

                        <!-- Login Button -->
                        <div class="text-center mb-3">
                            <button type="submit"
                                    class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue active:bg-blue-800">
                                Login
                            </button>
                        </div>
                    </form>

                </div>

                <!-- Register Link -->
                <div class="text-center">
                    <p class="text-sm text-gray-600">
                        Don't have an account?
                        <a asp-action="Register" asp-controller="Account" class="text-blue-500">Create a New Account</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

</body>
