@model UserListEdit
@{
    Layout = "_StaticLayout";
}

<div class="mt-20 min-h-[600px]">
    <div class="container mx-auto mt-5">
        <div class="flex justify-center">
            <div class="w-full max-w-4xl">
                <div class="bg-white p-8 rounded-lg shadow-md">
                    <h2 class="text-3xl font-bold text-center text-red-700 mb-8">User Registration</h2>

                    <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Full Name -->
                            <div>
                                <label asp-for="FullName"
                                       class="block text-gray-700 text-sm font-bold mb-2">
                                    Full Name
                                    <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="FullName"
                                       type="text"
                                       class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                         

                            <!-- Email -->
                            <div>
                                <label asp-for="EmailAddress"
                                       class="block text-gray-700 text-sm font-bold mb-2">
                                    Email
                                    <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="EmailAddress"
                                       type="email"
                                       class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" required />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>


                            <!-- Password -->
                            <div>
                                <label asp-for="UserPassword"
                                       class="block text-gray-700 text-sm font-bold mb-2">
                                    Password
                                    <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="UserPassword"
                                       type="password" class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" required />
                                <span asp-validation-for="UserPassword" class="text-danger"></span>
                            </div>

                           
                        </div>
                        <!-- Submit Button -->
                        <div class="text-center mt-6">
                            <button type="submit" class="w-full bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600 focus:outline-none focus:shadow-outline-green active:bg-red-800">Register</button>
                        </div>
                    </form>
                </div>
                <div class="text-center mt-4">
                    <p class="text-sm text-gray-600">
                        Already have an account?
                        <a asp-action="Login" asp-controller="Account" class="text-blue-500">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

   

   