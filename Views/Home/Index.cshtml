@model IEnumerable<UserListEdit>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="container mx-auto mt-10">
    <div class="bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-4">User List</h2>
        <div class="overflow-x-auto">
            <table class="table-auto w-full text-left">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="px-4 py-2">#</th>
                        <th class="px-4 py-2">Full Name</th>
                        <th class="px-4 py-2">Email</th>
                        <th class="px-4 py-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int count = 1;
                        foreach (var user in Model)
                        {
                            <tr class="bg-white border-b">
                                <td class="px-4 py-2">@count</td>
                                <td class="px-4 py-2">@user.FullName</td>
                                <td class="px-4 py-2">@user.EmailAddress</td>
                                <td class="px-4 py-2">
                                    <a asp-action="UserMessage" asp-controller="Home" asp-route-receiverId="@user.UserId" class="py-2 px-4 ms-2 text-gray-900 bg-white border-gray-200 rounded-lg border text-sm font-medium hover:bg-gray-100 hover:text-blue-700 focus:outline-none focus:z-10 focus:ring-4 focus:ring-gray-100 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:focus:ring-gray-700 dark:hover:text-white dark:hover:bg-gray-700">Message</a>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-red-500">No users found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
